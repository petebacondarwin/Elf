@model IEnumerable<Elf.Web.Mvc.TestSite.Areas.Main.Models.Page>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>
            Title
        </th>
        <th>
            NavigationTitle
        </th>
        <th>
            BodyText
        </th>
        <th>
            UrlSegment
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
        <td>
            @item.Title
        </td>
        <td>
            @item.NavigationTitle
        </td>
        <td>
            @item.BodyText
        </td>
        <td>
            @item.UrlSegment
        </td>
    </tr>
}

</table>

